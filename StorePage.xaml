<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HorsesEmpire.StorePage">

    <VerticalStackLayout>
        <Border BackgroundColor="{StaticResource Color200}" HorizontalOptions="Fill" HeightRequest="50" Margin="10, 10, 10,0" Padding="5">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="5,5,5,5"/>
            </Border.StrokeShape>
            <FlexLayout Direction="Row" AlignItems="Center">
                <Button Text="Comprar 5 espaços para cavalos - 1000€" FontSize="10" Margin="5,0,10,0" FlexLayout.Basis="82%" Padding="0" HeightRequest="30"/>
                <Label Text="1/10" FontAttributes="Bold" FontSize="Medium" FlexLayout.Basis="12%"/>
            </FlexLayout>
        </Border>
        <Grid WidthRequest="300" Margin="0,10,0,20" ColumnSpacing="-1">
            <Grid.ColumnDefinitions >
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Stroke="{StaticResource Color950}"  Grid.Column="0"  Padding="5">
                <Label Text="Cavalos" HorizontalOptions="Center" />
            </Border>

            <Border Stroke="{StaticResource Color950}"  Grid.Column="1" Padding="5">
                <Label Text="Upgrades" HorizontalOptions="Center" />
            </Border>
        </Grid>
        <ScrollView>
            <Border Margin="10,10,10,0" BackgroundColor="{StaticResource Color200}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="16,16,16,16"/>
                </Border.StrokeShape>
                <Grid ColumnDefinitions="100, *" RowDefinitions="*" Padding="10" ColumnSpacing="10">

                    <Border Grid.Column="0" HeightRequest="100" WidthRequest="100" BackgroundColor="{StaticResource Color400}">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="20,20,20,20"/>
                        </Border.StrokeShape>
                        <Image  Margin="10,5,5,5" HeightRequest="100" WidthRequest="100" Source="saddle.png"/>
                    </Border>

                    <StackLayout Grid.Column="1">

                        <Label Text="JailhouseRock" FontSize="18" Margin="0,0,0,10" FontAttributes="Bold"  TextColor="{StaticResource Color950}"/>
                        <Label Text="12€/s" FontSize="14" Margin="10,0,0,10"  TextColor="{StaticResource Color950}"/>



                        <FlexLayout
                            Margin="0,10,0,10"
                            Direction="Row"
                            AlignContent="Center"
                            AlignItems="Center"
                            JustifyContent="End">

                            <Button Text="Comprar por 300€" BackgroundColor="{StaticResource Green}" HorizontalOptions="End"/>
                        </FlexLayout>

                    </StackLayout>

                </Grid>
            </Border>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>