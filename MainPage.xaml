<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HorsesEmpire.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" x:Name="money" Text="1000000€" FontSize="50" />
        <Button  Grid.Row="1" HorizontalOptions="Fill" VerticalOptions="Fill" />



        <!-- Menu Bar -->
        <FlexLayout 
            Grid.Row="2"
            JustifyContent="SpaceAround" 
            Padding="10">
            
            <Button Text="1" />
            <Button Text="2" />
            <Button Text="3" />
            <Button Text="4" />
            <Button Text="5" />
            
        </FlexLayout>



    </Grid>

</ContentPage>
